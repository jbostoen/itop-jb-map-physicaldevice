	<classes>
		<!-- Add attribute for all PhysicalDevices, since majority can use it -->
		<class id="PhysicalDevice">
			<fields> 
				<field id="geometry" xsi:type="AttributeGeometry" _delta="define">
					<sql>geometry</sql>
					<default_value/>
					<is_null_allowed>true</is_null_allowed>
					<format>WKT|Point|EPSG:3857</format>
				</field>
			</fields>
		</class>
		<!-- Add in specific presentations of subclasses of PhysicalDevice. Order doesn't matter since it will be hidden. -->
		<class id="Enclosure">
			<presentation>
				<details>
					<items> 
						<item id="geometry" _delta="define">
							<rank>150</rank>
						</item>
					</items>
				</details>
			</presentation>
		</class>
